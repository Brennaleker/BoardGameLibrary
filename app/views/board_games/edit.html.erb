<div class = "normal_form">
  <%= form_for @board_game do |f| %>
  <fieldset>
    <legend>Game Details</legend>
      <%= f.label :title, "Title:"  %>
      <%= f.text_field :title, class: "form_field", autofocus: true %>

      <%= f.label :expansion, "Is an expansion:" %>
      <%= f.select :expansion, [[false], [true]], class: "form_field", autofocus: true %>
      <br>

      <%= f.label :expansion_to, "Expansion to:" %>
      <%= f.select :expansion_to, @game_titles, class: "form_field", autofocus: true  %>
      <br>

      <%= f.label :creator, "Creator:"  %>
      <%= f.text_field :creator, class: "form_field", autofocus: true %>

      <%= f.label :my_score, "My Score: (out of 10)"  %>
      <%= f.text_field :my_score, class: "form_field", autofocus: true %>

      <%= f.label :min_players, "Minimum Number of Players:"  %>
      <%= f.text_field :min_players, class: "form_field", autofocus: true %>

      <%= f.label :max_players, "Maximum Number of Players:"  %>
      <%= f.text_field :max_players, class: "form_field", autofocus: true %>

      <%= f.label :min_time, "Short Game: (in minutes)"  %>
      <%= f.text_field :min_time, class: "form_field", autofocus: true %>

      <%= f.label :max_time, "Long Game: (in minutes)"  %>
      <%= f.text_field :max_time, class: "form_field", autofocus: true %>

      <%= f.label :description, "Description:"  %>
      <%= f.text_area :description, size: "50x10", class: "form_field", autofocus: true %>
   </fieldset>

    <%= f.submit 'Edit Game', class: 'btn btn-edit' %>
  <% end %>
</div>
